<h1>Update the <%=@project.title() %> project </h1>

<form action="/projects/<%= @project.id() %>/edit" method="post">
  <input name="_method" type="hidden" value="patch">
  <label for="title">Rename the project:</label>
  <input id="title" name="title" type="text">

  <button type="submit" class="btn btn-info">Update Project</button>
</form>

<form action="/projects/<%= @project.id() %>/edit" method="post">
  <input name="_method" type="hidden" value="delete">

  <button type="submit" class="btn btn-info">Delete Project</button>
</form>

<h1><%= @volunteer.name() %></h1>

<% if @volunteer.projects().any?() %>
  <h3>Here are the projects for this volunteer:</h3>

  <ul>
    <% @volunteer.volunteers().each() do |volunteer| %>
      <li><a href="/volunteers/<%= volunteer.id()%>"><%= volunteer.title() %></a></li>
    <% end %>
  </ul>

  <% else %>
    <p>There are no volunteers for this volunteer!</p>
  <% end %>

  <form action="/volunteers/<%= @volunteer.id() %>" method="post">
    <input name="_method" type="hidden" value="patch">
    <label for="name">Rename the volunteer:</label>
    <input id="name" name="name" type="text">

    <button type="submit" class="btn btn-info">Update Volunteer</button>
  </form>

  <form action="/volunteers/<%= @volunteer.id() %>" method="post">
    <input name="_method" type="hidden" value="delete">

    <button type="submit" class="btn btn-info">Delete Volunteer</button>
  </form>

<p><a href="/volunteers">Project Home</a></p>
